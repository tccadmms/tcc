                android:id="@+id/saneamento_pergunta5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.91"
                android:text="4.5 O reservatório está em adequado estado de higiene e conservação (4.4.4)?"
